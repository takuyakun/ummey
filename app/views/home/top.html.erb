<% provide(:title, "ホーム") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="status">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="row">
  <h1>登録して美味しい店をチェックしよう</h1>
  <%= link_to "始める", signup_path, class: "btn btn-primary" %>
  <%= link_to "かんたんログイン", "/guest_login", method: :post, class: "btn btn-primary" %>
  </div>
<% end %>